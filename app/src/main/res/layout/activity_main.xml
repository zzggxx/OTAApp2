<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/check_update_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="vertical"
        >
<!--        android:visibility="gone"-->

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/update_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_update_config" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_enable_update_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!--<TextView
                android:id="@+id/download_speed"
                style="@style/update_textview_style"
                android:layout_gravity="center_horizontal"
                />-->

            <TextView
                android:id="@+id/total_length"
                style="@style/update_textview_style" />
            <!--                android:text="@string/total_length"-->

            <TextView
                android:id="@+id/current_offset"
                style="@style/update_textview_style" />
            <!--                android:text="@string/current_offset" -->

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/ProgressBar_Update"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:text="@string/download_file_start"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/target_version"
            style="@style/update_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/target_version_desc"
            style="@style/update_textview_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="6dp" />
    </LinearLayout>

    <!-- install system image dialog -->
    <LinearLayout
        android:id="@+id/ll_restart_show"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_bg1"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="20dp">

        <TextView
            style="@style/update_textview_style"
            android:text="@string/is_restart_now" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/update_textview_style"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_bg1"
                android:layout_width="100dp"
                android:padding="10dp"
                android:gravity="center"
                android:text="@string/later_remind" />

            <TextView
                android:gravity="center"
                android:layout_width="100dp"
                android:id="@+id/tv_sure"
                style="@style/update_textview_style"
                android:background="@drawable/btn_bg"
                android:padding="10dp"
                android:text="@string/restart_now"
                android:textColor="@color/c2" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/current_system_is_lastest"
        style="@style/update_textview_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/current_system_is_lastest"
        android:visibility="gone" />

</FrameLayout>
